<definitions xmlns="http://ws.apache.org/ns/synapse">
    <registry provider="org.wso2.carbon.mediation.registry.WSO2Registry">
        <parameter name="cachableDuration">15000</parameter>
    </registry>
    <proxy xmlns="http://ws.apache.org/ns/synapse" name="aggregateEmptyJsonPayloadTestProxy" transports="http https"
           startOnLoad="true" trace="disable">
        <description/>
        <target>
            <inSequence>
                <property name="ROOT_ELEMENT" scope="default">
                    <OverallResponse/>
                </property>
                <iterate xmlns:m0="http://services.samples"
                         xmlns:ns="http://org.apache.synapse/xsd"
                         id="restoreIterator"
                         expression="//m0:getQuote/m0:request">
                    <target>
                        <sequence>
                            <send>
                                <endpoint>
                                    <address uri="http://localhost:8480/no-content-response"/>
                                </endpoint>
                            </send>
                        </sequence>
                    </target>
                </iterate>
            </inSequence>
            <outSequence>
                <payloadFactory media-type="json">
                    <format>{}</format>
                    <args/>
                </payloadFactory>
                <property name="messageCount" value="2.0"/>
                <aggregate id="restoreIterator">
                    <completeCondition>
                        <messageCount min="-1" max="-1"/>
                    </completeCondition>
                    <onComplete expression="$body/*" enclosingElementProperty="ROOT_ELEMENT">
                        <log level="full">
                            <property name="AGG_ENV" value="aggregated envelope"/>
                        </log>
                        <respond/>
                    </onComplete>
                </aggregate>
            </outSequence>
        </target>
    </proxy>
    <api xmlns="http://ws.apache.org/ns/synapse" name="aggregateEmptyJsonPayloadTestAPI" context="/no-content-response">
        <resource methods="POST GET">
            <inSequence>
                <property name="ContentType" value="application/json" scope="axis2"/>
                <property name="HTTP_SC" value="204" scope="axis2" type="STRING"/>
                <respond/>
            </inSequence>
        </resource>
    </api>
</definitions>
